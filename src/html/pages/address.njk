{% extends 'layouts/application.njk' %}

{% block content %}

    {% for i in range(0, 2) %}

    <div class="address spoiler is-collapsed" data-controller="spoiler" data-classname="is-collapsed">

      <div class="address__container">
        <div class="address__img-wrapper spoiler__collapsable is-collapsed" data-target="spoiler.willHidden">
          <img class="address__img" src="https://daynight.ru/userfiles/editor/myimg/423_dn2.png" alt="">
        </div>

        <div class="address__info">
          <h2 class="address__heading" data-target="spoiler.trigger" data-action="click->spoiler#onTriggerAction">Магазин DayNight #{{i}}
            <span class="address__arrow"></span>
          </h2>
          <div class="address__contacts spoiler__collapsable is-collapsed" data-target="spoiler.willHidden">
            <div class="address__streets">
              <div class="address__street">
                Малая Посадская ул. 6 Санкт-Петербург
              </div>
              <div class="address__street">
                Malaya Posadskaya str. 6 Saint-Petersburg
              </div>
            </div>
            <div class="address__phone">
              +7 812 234 2300
            </div>
          </div>
        </div>
      </div>

    </div>
    {% endfor %}

{% endblock %}
